{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@worker-platform/shared": ["../../packages/shared/src"],
      "@worker-platform/shared/*": ["../../packages/shared/src/*"],
      "@worker-platform/types": ["../../packages/types/src"],
      "@worker-platform/types/*": ["../../packages/types/src/*"],
      "@api/*": ["./src/*"],
      "@common/*": ["./src/common/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["./src/database/*"],
      "@health/*": ["./src/health/*"],
      "@logging/*": ["./src/logging/*"],
      "@redis/*": ["./src/redis/*"]
    }
  }
}
